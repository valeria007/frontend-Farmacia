<!DOCTYPE html>
<html lang="es">
<head>
	<title>Inicio</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<%- include("partials/head") -%>
</head>
<body>
	<!-- SideBar -->
	<%- include("partials/menu") -%>
	<!-- Content page-->
	<section class="full-box dashboard-contentPage">
	<!-- NavBar -->
	<nav class="full-box dashboard-Navbar">
		<ul class="full-box list-unstyled text-right">
			<li class="pull-left">
				<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
			</li>
			<li>
				<a href="#!" class="btn-search"><i class="zmdi zmdi-search"></i></a>
			</li>
		</ul>
	</nav>
	<!-- Content page -->
	<div class="container-fluid">
		<div class="page-header">
	        <h1 class="text-titles"><i class="zmdi zmdi-hospital zmdi-hc-fw"></i>Medicanetos e Insumos</h1>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<ul class="nav nav-tabs" style="margin-bottom: 15px;">
				  	<li class="active"><a href="#new" data-toggle="tab">Nuevo</a></li>
				  	<li><a href="#list" data-toggle="tab">Lista</a></li>
                </ul>
                <!-- Nuevo Medicamento -->
			    <div id="myTabContent" class="tab-content">
					<div class="tab-pane fade active in" id="new">
						<div class="container-fluid">
							<div class="row">
								<div class="col-xs-12 col-md-10 col-md-offset-1">
							        <form action="/regmed" method="POST">
                                        <div class="form-group">
                                            <label class="control-label">Grupo de Asignación</label>
                                            <select class="form-control" name="grupodeasignacion">
												<% for(var i = 0; i < datosAsig.length; i++ ) {%>
                                                <option><%=datosAsig[i].descripcion%></option>
												<% } %>
                                            </select>
                                        </div>
								    	<div class="form-group label-floating">
										    <label class="control-label">Codificación</label>
											<input class="form-control" type="text" name="codificacion">
										</div>
										<div class="form-group label-floating">
											<label class="control-label">Nombre</label>
											<input class="form-control" type="text" name="nombre">
										</div>
										<div class="form-group label-floating">
										    <label class="control-label">Generico</label>
											<input class="form-control" type="text" name="generico">
										</div>
										<div class="form-group label-floating">
											<label class="control-label">Unidad de Medida</label>
											<input class="form-control" type="text" name="unidaddemedida">
										</div>
										<div class="form-group label-floating">
											<label class="control-label">Presentacion</label>
											<input class="form-control" type="text" name="presentacion">
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Concentracion</label>
                                            <input class="form-control" type="text" name="concentracion">
                                        </div>
										<p class="text-center">
                                            <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                            <button type="submit" class="btn btn-danger"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                                        </p>
								    </form>
								</div>
							</div>
						</div>
                    </div>
                    <!-- lista Medicamento -->
				  	<div class="tab-pane fade" id="list">
						<div class="table-responsive">
							<table class="table table-hover text-center">
								
								<thead>
									<tr>
										<th class="text-center">#</th>
										<th class="text-center">Grupo de Asignación</th>
										<th class="text-center">Codificación</th>
										<th class="text-center">Nombre</th>
										<th class="text-center">Generico</th>
										<th class="text-center">Unidad de Medida</th>
										<th class="text-center">Presentacion</th>
                                        <th class="text-center">Concentracion</th>
                                        <th class="text-center">Modificar</th>
                                        <th class="text-center">Eliminar</th>
									</tr>
									</thead>
									<tbody>
										<% for(var i = 0; i < resp.length; i++ ) {%>
										<tr>
											<td><%= i + 1 %></td>
											<td><%= resp[i].grupodeasignacion%></td>
											<td><%= resp[i].codificacion%></td>
											<td><%= resp[i].nombre%></td>
											<td><%= resp[i].generico%></td>
											<td><%= resp[i].unidaddemedida%></td>
											<td><%= resp[i].presentacion%></td>
											<td><%= resp[i].concentracion%></td>
											<td><a href="#!" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>
											<td><a href="#!" class="btn btn-danger btn-raised btn-xs"><i class="zmdi zmdi-delete"></i></a></td>
										</tr>
									</tbody>
									<% } %>
                                </table>
                                <p class="text-center">
                                    <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-print"></i> &nbsp;&nbsp; Imprimir </button>
                                </p>
								<ul class="pagination pagination-sm">
								  	<li class="disabled"><a href="#!">«</a></li>
								  	<li class="active"><a href="#!">1</a></li>
								  	<li><a href="#!">2</a></li>
								  	<li><a href="#!">3</a></li>
								  	<li><a href="#!">4</a></li>
								  	<li><a href="#!">5</a></li>
								  	<li><a href="#!">»</a></li>
								</ul>
							</div>
					  	</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
</body>
</html>